@if (Enabled)
{
    <div class="zcentre">
        <div class="spinner-border ml-auto text-warning" role="status" aria-hidden="true" />
        <span>&nbsp; &nbsp;@Message</span>
    </div>
}
@code {
    [Parameter]
    public bool Enabled { get; set; } = false;

    [Parameter]
    public string Message { get; set; } = string.Empty;
}
